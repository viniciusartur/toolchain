#!/bin/bash
set -xe
echo "BUILD_NUMBER=$BUILD_NUMBER."
echo "BRANCH=$BRANCH."
echo "GIT_TAG_NAME=$GIT_TAG_NAME."

docker build --no-cache -t kodekonveyor/toolchain:$BUILD_NUMBER .
docker tag kodekonveyor/toolchain:$BUILD_NUMBER kodekonveyor/toolchain:$(echo $BRANCH|sed 'sA/A.Ag')
if [ "x$GIT_TAG_NAME" != "x" ]; then docker tag kodekonveyor/toolchain:$BUILD_NUMBER kodekonveyor/toolchain:$GIT_TAG_NAME; else echo not building for tag ;fi

